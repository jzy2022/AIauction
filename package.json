{
  "name": "aiauction",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker compose up -d && pnpm db:migrate && pnpm db:generate && concurrently \"pnpm --filter=server dev\" \"pnpm --filter=web dev\"",
    "build": "pnpm --filter=ui build && pnpm --filter=server build && pnpm --filter=web build",
    "start": "concurrently \"pnpm --filter=server start\" \"pnpm --filter=web start\"",
    "db:migrate": "pnpm --filter=server db:migrate",
    "db:generate": "pnpm --filter=server db:generate",
    "db:reset": "pnpm --filter=server db:reset",
    "db:seed": "pnpm --filter=server db:seed",
    "test": "pnpm --filter=server test && pnpm --filter=web test",
    "lint": "pnpm --filter=server lint && pnpm --filter=web lint && pnpm --filter=ui lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}